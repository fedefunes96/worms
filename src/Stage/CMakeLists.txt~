cmake_minimum_required(VERSION 2.8.12)
project (Worms)

set (PROJECT_LINK_LIBS Box2D.a)
link_directories( usr/local/lib )

target_include_directories(Worms PUBLIC ${CMAKE_CURRENT_SOURCE_DIR})

include_directories(${CMAKE_CURRENT_BINARY_DIR})
include_directories(Stage)
include_directories(Ubicables)
include_directories(Ubicables/Missiles)
include_directories(Usables)
include_directories( ../Escenario/GameWindow )
#include_directories( BEFORE ${MY_SOURCE_DIR}/src )

set(CMAKE_CXX_FLAGS "-Wall -Werror -std=c++11 -pthread -pedantic")

add_compile_options(-std=c++11 -pthread)

file(GLOB SOURCES "*.cpp" 
"Stage/*.cpp"
"Ubicables/*.cpp"
"Ubicables/Missiles/*.cpp"
"Usables/*.cpp"
"../Escenario/GameWindow/socket.cpp"
"../Escenario/GameWindow/protocol.cpp")

set(SOURCE
   ${SOURCE}
   ${CMAKE_CURRENT_SOURCE_DIR}/*.cpp
   PARENT_SCOPE
)


